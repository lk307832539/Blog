<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.UserCategoryContent" table="user_category_content" schema="blog">
        <id name="userCategoryId" column="user_category_id"/>
        <many-to-one name="contentByContentId" class="com.entity.Content">
            <column name="content_id" not-null="true"/>
        </many-to-one>
        <one-to-one name="userCategoryByUserCategoryId" class="com.entity.UserCategory"/>
    </class>
</hibernate-mapping>